<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_label_wizard_form_view" model="ir.ui.view">
        <field name="name">product.label.wizard.form</field>
        <field name="model">product.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Product Labels">
                <group>
                    <group>
                        <field name="template_id"/>
                        <field name="pricelist_id"/>
                    </group>
                    <group>
                        <field name="quantity_per_product"/>
                    </group>
                </group>

                <notebook>
                    <page string="Products" name="products">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="product_id"/>
                                <field name="barcode"/>
                                <field name="lot_id" optional="hide"/>
                                <field name="quantity"/>
                            </list>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="action_print_labels"
                            string="Print Labels"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_preview"
                            string="Preview"
                            type="object"
                            class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_label_wizard" model="ir.actions.act_window">
        <field name="name">Print Labels</field>
        <field name="res_model">product.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
